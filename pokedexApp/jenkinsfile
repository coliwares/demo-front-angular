pipeline {
    agent any
    environment {
        WORKDIR = '/app'
        NODEIMAGE = 'node:18-alpine'
    }

    stages {
        stage('build') {
            steps {
                // build angular app in docker container
                echo 'build angular'
                workdir = WORKDIR
                sh 'docker-compose down'
                sh 'docker-compose build'
            }
        }
        stage('unit test') {
            steps {
                echo 'resultados Unit test'
            }
        }
        stage('sonar') {
            steps {
                echo 'resultados sonar'
            }
        }
        stage('despliegue desarrollo') {
            steps {
                echo 'en desa'
                sh 'docker-compose up -d'
            }
        }
        stage('paso a pro') {
            steps {
                echo 'en pro'
            }
        }

    }
}
