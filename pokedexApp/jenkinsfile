pipeline {
    agent any
    environment {
        WORKDIR = '/app'
        NODEIMAGE = 'node:18-alpine'
    }

    stages {
        stage('Docker build') {
            steps {
                // build angular app in docker container
                echo 'Running Docker Compose build'
                sh 'pwd'
                sh 'cd pokedexApp'
                sh 'ls -la'
                sh 'docker-compose down'
                sh 'docker-compose -f docker-compose.yml build --no-cache'
            }
        }
        stage('unit test') {
            steps {
                echo 'resultados Unit test'
            }
        }
        stage('sonar') {
            steps {
                echo 'resultados sonar'
            }
        }
        stage('despliegue desarrollo') {
            steps {
                echo 'en desa'
            }
        }
        stage('paso a pro') {
            steps {
                echo 'en pro'
            }
        }
    }
}
