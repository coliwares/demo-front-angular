pipeline {
    agent any
    environment {
        WORKDIR = '/app'
        NODEIMAGE = 'node:18-alpine'
    }


    stages {
        stage('unit test') {
            steps {
                echo 'resultados Unit test'
            }
        }
        stage('sonar') {
            steps {
                echo 'resultados sonar'
            }
        }
        stage('despliegue desarrollo :)') {
            steps {
                // build angular app in docker container
                echo 'Running Docker Compose build'
                sh script:'''
                    #!/bin/bash
                    echo "This is start $(pwd)"
                    cd ./pokedexApp
                    echo "This is $(pwd)"
                    docker-compose down
                    docker image prune -a -f
                    docker-compose -f docker-compose.yml build --no-cache
                    docker-compose -f docker-compose.yml up -d
                    '''
            }
        }
        stage('paso a pro') {
            steps {
                echo 'en pro'
            }
        }
    }
}
